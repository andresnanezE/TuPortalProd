@model Presentacion.Mvc.App.Models.CaracterizacionCampañasModel

@{
    ViewBag.Title = "Administración Caracterización Campaña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
@using (Html.BeginForm("Modificar", "CaracterizacionCampañas", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@*<form id="usiarios-form" action="@Url.Action("Modificar")" method="POST">*@
<div class="panel panel-default" style="width: 65%">
    <div class="panel-heading">
        <h3>Modificar</h3>
    </div>
    <div class="panel-body">

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.TIPO_TARIFA)
            @Html.HiddenFor(model => model.CAMPANA_TARIFA)
            @Html.HiddenFor(model => model.RUTA_IMAGEN)

            <div class="form-group">
                @Html.Label("Tipo Tarifa", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DisplayTextFor(model => model.TIPO_TARIFA)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Campaña", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DisplayTextFor(model => model.CAMPANA_TARIFA)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Ruta imagen", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DisplayTextFor(model => model.RUTA_IMAGEN)
                    <input type="file" name="file" />
                    <p class="text-info">Tamaño de la imagen 250px Ancho x 100px Alto</p>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Caracterización", new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.CARACTERIZACION, new { htmlAttributes = new { @class = "form-control " }, style = "width:500px", rows = "5", cols="100", maxlength="500" })
                    @Html.ValidationMessageFor(model => model.CARACTERIZACION, "", new { @class = "text-danger" })
                    <p class="text-info">Tamaño máximo de caracteres 500</p>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer" style="height: auto">
        <div class="form-group fa fa-align-right">
            <a class="btn btn-primary" href="@Url.Action("Index", "CaracterizacionCampañas")">Cancelar</a>

            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
@*</form>*@
}