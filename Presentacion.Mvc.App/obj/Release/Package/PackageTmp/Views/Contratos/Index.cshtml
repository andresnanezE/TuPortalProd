    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function Validar() {
        $("#modalProcesando").modal('show');
        var a = new PNotify({
            title: 'Contratos',
            text: 'Abriendo Contrato...',
            type: 'success',
            icon: false
        });
    }
    window.onload = load;
    $('form').submit(function () {
