@model Presentacion.Mvc.App.Models.ClausuladoContratoModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Consultas y Descargas";
}

@Scripts.Render("~/bundles/reportes")
@Styles.Render("~/Styles/spinner.css")

<br />
<br />
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4><strong>@ViewBag.Title</strong></h4>
        </div>
        <div class="form-horizontal">
            <br />
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <p>Manual Usuario</p>
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <p>Consulta y descarga el manual de usuario del servicio de Emermédica.</p>
                    <hr />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-8">

                    <a class="btn btn-danger" href=@Url.Action("DescargarArchivo", "ManualUsuarioEmermedica", new
                                                                                                                         {
                                                                                                                             Model.Archivo
                                                                                                                         })>
                        <span class="glyphicon glyphicon-download" aria-hidden="true"></span> Descargar
                    </a>
                    <br /><br />
                </div>
            </div>
        </div>
    </div>
</div>