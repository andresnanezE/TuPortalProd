@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Error";
}

<html>
<body>
    <div class="container" style="margin-top: 10px">
        <div class="panel-heading text-center" style="padding-top: 0px;">
            <h3 style="margin-top: 0px;"><strong>Lo sentimos, se ha presentado un error inesperado</strong></h3>
        </div>

        <div class="form-group">
            <button class="btn btn-lg btn-primary col-md-6 col-md-offset-3" onclick="goBack()">Recuperar</button>
        </div>
        </div>
        <script>
            $('#content').on('click', function () {
                location = "/Home/";
            });
            function goBack() {
                if ((typeof window.history.back() == 'undefined'))
                    location = "/Home/";
            }
            function goHome() {
                location = "/Home/";
            }


        </script>
</body>
</html>

