@model Presentacion.Mvc.App.Models.MessageModel

<div class="panel panel-default" style="width: 100%">
    <div class="panel-heading">
        <h3>@Html.DisplayFor(model => model.Titulo)</h3>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.Cuerpo)
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer" style="height: auto">
        <div class="form-group fa fa-align-right">
            <input type="button" value="@Html.DisplayFor(model => model.aceptar)" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" />
            @*<input type="button" value="@Html.DisplayFor(model => model.MensajeCerrar)" class="btn btn-primary" data-dismiss="modal" aria-hidden="true" />*@
            @*<a class="btn btn-primary" href="@Url.Action("Index", "Usuario")">@Html.DisplayFor(model => model.MensajeCerrar)</a>*@
        </div>
    </div>
</div>

