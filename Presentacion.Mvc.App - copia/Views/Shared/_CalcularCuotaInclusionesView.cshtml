<style>
    .select-editable {
        position: relative;
        background-color: white;
        width: 180px;
        height: 100%;
    }

        .select-editable select {
            position: absolute;
            top: 0px;
            left: 0px;
            font-size: 14px;
            border: none;
            width: 120px;
            margin: 0;
        }

        .select-editable input {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100px;
            height: 30px;
            /*padding: 1px;*/
            font-size: 14px;
            border: none;
            margin-left: 8PX;
        }

            .select-editable select:focus, .select-editable input:focus {
                outline: none;
            }

            #sTarifas {
                border-radius: 3px;
                padding-top: 2px;
                border: solid 1px #CCCCCC;
                padding-bottom: 0px;
