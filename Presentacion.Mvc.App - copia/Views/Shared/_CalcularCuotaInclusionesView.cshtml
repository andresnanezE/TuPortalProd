    <div class="prorrateo">
        <div class="col-md-3">
            <label class="control-label" for="vIvaProrrateo">Valor Iva:</label>
        </div>
        <div class="col-md-3">
            <label class="control-label calc" id="vIvaProrrateo" name="vIvaProrrateo"></label>
        </div>
    </div>

    <div class="pcuota">
        <div class="col-md-3">
            <label class="control-label" for="vIvaProximaCuota">Valor Iva:</label>
        </div>
        <div class="col-md-3">
            <label class="control-label calc" id="vIvaProximaCuota" name="vIvaProximaCuota"></label>
