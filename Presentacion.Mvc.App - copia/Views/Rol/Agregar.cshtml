@model Presentacion.Mvc.App.Models.RolModel

@{
    ViewBag.Title = "Administración Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="sedes-form" action="@Url.Action("Agregar")" method="POST">
    <div class="panel panel-default" style="width: 65%">
        <div class="panel-heading">
            <h3>Agregar</h3>
        </div>

        <div class="panel-body">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label("Rol", new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Activo", new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                            @Html.CheckBoxFor(model => model.Activo)
                            @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer" style="height: auto">
            <div class="form-group fa fa-align-right">
                <a class="btn btn-primary" href="@Url.Action("Index", "Rol")">Cancelar</a>
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
